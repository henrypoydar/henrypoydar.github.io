          or
          %code
            +aristo-menu
            
      .column.span-8

        %ul.aristo-menu-inverse
          %li
            %a
              New
          %li
            %a
              Open
          %li
            %a
              Save
          %li
            %a
              Project
          %li
            %a
              Build
              
        %p.compass
          %code
            ul.aristo-menu-inverse
          or
          %code
            +aristo-menu-inverse
      
      
